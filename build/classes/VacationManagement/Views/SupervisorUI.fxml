<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="381.0" prefWidth="578.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="VacationManagement.Controllers.SupervisorUIController">
   <children>
      <TabPane prefHeight="464.0" prefWidth="722.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="  Requests   ">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="437.0" prefWidth="715.0">
                     <children>
                        <TableView fx:id ="tablePendingRequest" layoutX="27.0" layoutY="29.0" prefHeight="336.0" prefWidth="657.0"
                        onMouseClicked="#enableRequestButtons" >
                          <columns>
                            <TableColumn fx:id= "pColumnRequestID" prefWidth="75.0" text="Request_ID" />
                            <TableColumn fx:id= "pColumnEmployeeID" prefWidth="88.0" text="Employee_ID" />
                              <TableColumn fx:id= "pColumnName" prefWidth="123.0" text="Employee_Name" />
                              <TableColumn fx:id= "pColumnStartDate" prefWidth="131.0" text="Start_Date" />
                              <TableColumn fx:id= "pColumnEndDate" prefWidth="123.0" text="End_Date" />
                              <TableColumn fx:id= "pColumnDays" prefWidth="116.0" text="Days" />
                          </columns>
                        </TableView>
                        <Button fx:id= "buttonApprove" layoutX="193.0" layoutY="381.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="93.0" text="Approve"
                        onAction="#approveRequest"/>
                        <Button fx:id= "buttonDeny" layoutX="400.0" layoutY="380.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="97.0" text="Deny"
                        onAction="#denyRequest"/>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
          <Tab text="  Requests History  " onSelectionChanged="#loadTableHistoryRequest">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="413.0" prefWidth="709.0">
                     <children>
                        <TableView fx:id ="tableHistoryRequest" layoutX="34.0" layoutY="26.0" prefHeight="324.0" prefWidth="651.0">
                          <columns>
                            <TableColumn fx:id= "hColumnEmployeeID" prefWidth="72.0" sortType="DESCENDING" text="Empl_ID" />
                              <TableColumn fx:id= "hColumnRequestID" prefWidth="78.0" sortType="DESCENDING" text="Req_ID" />
                            <TableColumn fx:id= "hColumnName" prefWidth="125.0" sortType="DESCENDING" text="Employee_Name" />
                              <TableColumn fx:id= "hColumnStartDate" prefWidth="125.0" sortType="DESCENDING" text="Start_Date" />
                              <TableColumn fx:id= "hColumnEndDate" prefWidth="90.0" sortType="DESCENDING" text="End_Date" />
                              <TableColumn fx:id= "hColumnStatus" prefWidth="75.0" text="Status" />
                              <TableColumn fx:id= "hColumnDays" prefWidth="75.0" text="Days" />
                          </columns>
                        </TableView>
                        <Text layoutX="34.0" layoutY="391.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Employee ID:  " />
                        <TextField fx:id = "historyTextField" layoutX="116.0" layoutY="374.0" onKeyTyped="#searchHistorByID"/>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="  Reports  ">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
